<%= form_with model: @movie, url:admin_movies_path, local: true, method: :post do |f| %>


<%= f.label :image, "画像選択" %>
<%= f.attachment_field :image %>

 <%= f.label :movie_name, "映画名" %>
 <%= f.text_field :movie_name, placeholder: "ここに映画名を入力します" %>

<%= f.label :genre,"映画ジャンル" %>
<%= f.select :genre, [["アクション映画", "アクション映画"], ["SF映画", "SF映画"], ["アドベンチャー映画", "アドベンチャー映画"], ["ファンタジー映画", "ファンタジー映画"],["ホラー映画", "ホラー映画"],["サスペンス/クライムサスペンス映画", "サスペンス/クライムサスペンス映画"],["ミステリー映画", "ミステリー映画"],["戦争映画", "戦争映画"],["コメディ映画", "コメディ映画"],["恋愛映画", "恋愛映画"],["ファミリー映画", "ファミリー映画"],["ミュージカル映画", "ミュージカル映画"]], include_blank: "選択して下さい" %>


<%= f.label :detail,"映画のあらすじ" %>
<%= f.text_area :detail, placeholder: "ここに映画の説明文を入力します" %>

 <%= f.submit "映画登録", class:"btn btn-success" %>

<% end %>




