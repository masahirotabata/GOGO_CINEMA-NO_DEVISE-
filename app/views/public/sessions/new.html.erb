<% provide(:title, "log in") %>
<h1>session</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with model: @customer, url: public_sessions_path, method: :post, local: true  do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "session", class: "btn btn-primary" %>
    <% end %>

    <p>New Customer? <%= link_to "Sign up now!", new_public_customer_path %></p>
  </div>
</div>